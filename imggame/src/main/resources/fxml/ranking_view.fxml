<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="imggame.controller.RankingPlayerController"
      spacing="15"
      stylesheets="@../styles/rankingview.css"
      styleClass="ranking-root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Title and Actions -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="ranking-header">
        <Label text="Bảng xếp hạng" styleClass="ranking-header-title"/>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshBtn" text="Làm mới" styleClass="button-blue"/>
    </HBox>

    <!-- Info Label -->
    <Label fx:id="infoLabel" styleClass="info-label"/>

    <!-- Ranking Table -->
    <TableView fx:id="rankingTable" VBox.vgrow="ALWAYS" styleClass="ranking-table">
        <columns>
            <TableColumn fx:id="rankCol" text="Hạng" prefWidth="80" styleClass="col-center-bold"/>
            <TableColumn fx:id="usernameCol" text="Tên người chơi" prefWidth="250" styleClass="col-normal"/>
            <TableColumn fx:id="eloCol" text="ELO" prefWidth="120" styleClass="col-center-blue"/>
        </columns>
        <placeholder>
            <Label text="Không có dữ liệu. Nhấn 'Làm mới' để tải lại." styleClass="placeholder-label"/>
        </placeholder>
    </TableView>
</VBox>

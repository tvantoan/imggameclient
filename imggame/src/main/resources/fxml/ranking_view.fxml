<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="imggame.controller.RankingPlayerController" spacing="15" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <!-- Title and Actions -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <Label text="Bảng xếp hạng" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshBtn" text="Làm mới" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 16; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- Info Label -->
    <Label fx:id="infoLabel" style="-fx-text-fill: #666666; -fx-font-size: 12px;" />
    
    <!-- Ranking Table -->
    <TableView fx:id="rankingTable" VBox.vgrow="ALWAYS" prefHeight="400" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <columns>
            <TableColumn fx:id="rankCol" text="Hạng" prefWidth="80" style="-fx-alignment: CENTER; -fx-font-weight: bold;"/>
            <TableColumn fx:id="usernameCol" text="Tên người chơi" prefWidth="250" style="-fx-font-size: 14px;"/>
            <TableColumn fx:id="eloCol" text="ELO" prefWidth="120" style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        </columns>
        <placeholder>
            <Label text="Không có dữ liệu. Nhấn 'Làm mới' để tải lại." style="-fx-text-fill: #999999; -fx-font-size: 14px;"/>
        </placeholder>
    </TableView>
</VBox>

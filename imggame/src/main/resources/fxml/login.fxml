<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="imggame.controller.LoginController" 
    prefWidth="1080" prefHeight="720">
    <children>
        <VBox alignment="CENTER" spacing="15.0" maxWidth="400" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Imggame - Đăng nhập" styleClass="title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username" prefWidth="350" maxWidth="350" prefHeight="40" style="-fx-font-size: 14px; -fx-padding: 8 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #CCCCCC;"/>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="350" maxWidth="350" prefHeight="40" style="-fx-font-size: 14px; -fx-padding: 8 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #CCCCCC;"/>
            <HBox spacing="15" alignment="CENTER" prefWidth="350" maxWidth="350">
                <Button fx:id="loginBtn" text="Đăng nhập" prefWidth="167" maxWidth="167" prefHeight="40" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
                <Button fx:id="registerBtn" text="Đăng ký" prefWidth="167" maxWidth="167" prefHeight="40" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
            </HBox>
            <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>
    </children>
</AnchorPane>
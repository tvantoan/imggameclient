<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="imggame.controller.JoinRoomController"
      spacing="15"
      stylesheets="@../styles/joinroom.css"
      styleClass="joinroom-root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Title and Actions -->
    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="header-box">
        <Label text="Danh sách phòng" styleClass="header-title"/>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshBtn" text="Làm mới" styleClass="button-gray"/>
        <Button fx:id="createBtn" text="Tạo phòng mới" styleClass="button-blue"/>
    </HBox>

    <!-- Info Label -->
    <Label fx:id="infoLabel" styleClass="info-label"/>

    <!-- Room List -->
    <ListView fx:id="roomList" VBox.vgrow="ALWAYS" styleClass="room-list">
        <placeholder>
            <Label text="Không có phòng nào. Nhấn 'Làm mới' để tải lại." styleClass="placeholder-label"/>
        </placeholder>
    </ListView>

    <!-- Join Button -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="joinBtn" text="Vào phòng" styleClass="button-green"/>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="imggame.controller.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="12.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Label text="Đăng ký (demo)" styleClass="title" />
            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <PasswordField fx:id="confirmField" promptText="Confirm" />
            <HBox spacing="10">
                <Button fx:id="createBtn" text="Tạo" />
                <Button fx:id="backBtn" text="Quay lại" />
            </HBox>
            <Label fx:id="infoLabel" />
        </VBox>
    </children>
</AnchorPane>